---
// src/layouts/BaseHead.astro
import YukinaConfig from "../../yukina.config";
import GlobalStyles from "./GlobalStyles.astro";
import ScriptSetup from "./ScriptSetup.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;                  // URL absolue ou relative au site
  type?: "website" | "article";
  canonical?: string;              // chemin (ex: "/services") ou URL absolue
  noindex?: boolean;
}

const {
  title,
  description,
  image,
  type = "website",
  canonical,
  noindex = false,
} = Astro.props;

const siteTitle = YukinaConfig.title;
const pageTitle = title ?? siteTitle;
const fullTitle = pageTitle === siteTitle ? pageTitle : `${pageTitle} Â· ${siteTitle}`;
const pageDesc = description ?? YukinaConfig.description;

const canonicalURL = new URL(canonical ?? Astro.url.pathname, Astro.site);
const ogImage = image ? new URL(image, Astro.site) : null;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="canonical" href={canonicalURL} />

<title>{fullTitle}</title>
<meta name="title" content={fullTitle} />
<meta name="description" content={pageDesc} />

<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={pageDesc} />
{ogImage && <meta property="og:image" content={ogImage} />}

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={fullTitle} />
<meta property="twitter:description" content={pageDesc} />
{ogImage && <meta property="twitter:image" content={ogImage} />}

{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- RSS AutoDiscovery -->
<link rel="alternate" type="application/rss+xml" title={siteTitle} href={new URL("rss.xml", Astro.site)} />
<!-- SiteMap -->
<link rel="sitemap" href="/sitemap-index.xml" />

<GlobalStyles />
<ScriptSetup />
