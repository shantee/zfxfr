---
import PostArchiveLayout from "../layouts/PostArchiveLayout.astro";
import I18nKeys from "../locales/keys";
import { i18n } from "../locales/translation";
import { GetArchives } from "../utils/content";

const archiveMap = await GetArchives();
---

<PostArchiveLayout
  archiveMap={archiveMap}
  title={i18n(I18nKeys.pages_archive_archive)}
/>
<style is:global>
  .main-container > .flex.flex-row.items-start > .space-y-8 {
    flex: 1 1 auto;
    min-width: 0;
  }
</style>
